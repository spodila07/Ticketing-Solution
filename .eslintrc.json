{
  "plugins": ["import", "prettier"],
  "extends": ["standard", "prettier"],
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "standard/no-callback-literal": 0, // enable after error handing refactor
    "node/exports-style": 0,
    "n/no-callback-literal": 0,
    "new-cap": 0,
    "no-console": "off",
    "complexity": ["error", 20]
  },
  "globals": {
    "define": true,
    "requirejs": true,
    "MG": true,
    "Snackbar": true,
    "ROLES": true,
    "io": true,
    "d3": true
  }
}
